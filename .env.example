# ACCU Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI Providers
# =============================================================================

# Primary: OpenRouter (recommended - access to multiple models)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Fallback: Anthropic Direct
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Fallback: OpenAI Direct
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# GitHub Access
# =============================================================================

# GitHub Personal Access Token (for API access)
# Required scopes: public_repo, read:user
GITHUB_TOKEN=ghp_your-token-here

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection
DATABASE_URL=postgresql+asyncpg://accu:accu_password@localhost:5432/accu

# Redis (for caching and job queue)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Secret key for JWT/sessions (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# =============================================================================
# Cost Controls
# =============================================================================

# Daily budget for AI API calls (USD)
AI_DAILY_BUDGET_USD=50.0

# Alert threshold (USD) - notify when daily spend exceeds this
AI_ALERT_THRESHOLD_USD=10.0

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: json, console
LOG_FORMAT=console
